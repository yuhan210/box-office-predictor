  <div class="views-field views-field-field-header">        <div class="field-content">Desired opportunities for skill development</div>  </div>  
  <div class="views-field views-field-body">        <div class="field-content"></div>  </div>  
  <div class="views-field views-field-field-bubble-image">        <div class="field-content"><img typeof="foaf:Image" src="http://future/sites/default/files/bubble-11_18.png" width="228" height="157" alt="" /></div>  </div>  
